plugin.classid:clsid:8AD9C840-044E-11D1-B3E9-00805F499D93
plugin.iedownload=https://java.sun.com/update/1.7.0/jinstall-7u45-windows-i586.cab
plugin.type:application/x-java-applet;version=1.7
